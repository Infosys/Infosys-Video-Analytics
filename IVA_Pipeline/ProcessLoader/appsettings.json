{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConfigDetails": {
    "DeviceConfiguration": {
    }
  },
  "ConnectionStrings": {
    //connection string for Postgres
    //"FaceMaskDetectionEntities": "Server=DB_Server;Database=DB_Name;Port=5432;Username=postgres;Password=xxxxx;",
    //"FrameDetailStore": "Server=DB_Server;Database=DB_Name;Port=5432;Username=postgres;Password=xxxxx",
    //connection string for SQLSERVER
    "FaceMaskDetectionEntities": "Server=DB_Server;Database=DB_Name;User Id=postgres;Password=postgres;TrustServerCertificate=True;",
    "FrameDetailStore": "Server=DB_Server;Database=DB_Name;User Id=postgres;Password=postgres;TrustServerCertificate=True;"
  },
  "AppSettings": {
    "TenantID": 1,
    "DeviceID": "DeviceId_10",
    //DBProvider is used to connect to one DB provider a time. Supported DB providers are "postgres" and "sqlserver"
    "DBProvider": "postgres",
    "ConfigWebApi": "http://localhost:8086/VideoAnalyticsApiNew/",
    "ConfigSource": "file",
    "ConfigFilePath": "Configurations\\Device.json",
    "ElasticsearchUrl": "http://localhost:9200/",
    "Secrets": "",
    "ConfigurationManagement": ""
  },
  "LISettings": {
    "Path": "Configurations\\LiSettings.json"
  },
  "NLog": {
    "internalLogLevel": "Error",
    //enable asp.net core layout renderers[
    "extensions": {
      "NLog.Web.AspNetCore": {
        "assembly": "NLog.Web.AspNetCore"
      }
    },
    //the targets to write to
    "targets": {
      //write logs to file
      "allfile": {
        "type": "File",
        "fileName": "nlog-IVA-${shortdate}.log",
        "layout": "${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${argument}|${message} ${exception:format=tostring}"
      }
    },
    //rules to map from logger name to target
    "rules": [
      //All logs, including from Microsoft
      {
        "logger": "*",
        "minLevel": "Error",
        "writeTo": "allfile"
      }
    ]
  }
}
